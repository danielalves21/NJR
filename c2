#include <stdio.h>
#include <locale.h>

   int main(){
   setlocale(LC_ALL, "");
   //Definido variaveis 
   char nome[200];
   int  idade;
   int media1;
   int media2;
   int media3;
   int soma;
   float media;
   
   //solicitando dados do usuario 
   
   printf("\nDigite seu nome:");
   scanf("%s",&nome);
   
   printf("\nDigite sua idade:");
   scanf("%i",&idade);
   
   printf("\nDigite sua primeira nota:");
   scanf("%i",&media1);
   
   printf("\nDigite sua segunda nota:");
   scanf("%i",&media2);
   
   printf("\nDigite sua terceira nota:");
   scanf("%i",&media3);
   
   //definido resultados
   soma=media1+media2+media3;
   media=soma/3;
   //Exibindo resultados
   printf("\n==nExibindo resultados==\n");
   printf("Nome: %s \n",nome);
   printf("idade: %i \n",idade);
   printf("media: %f \n",media);
   
   if(media>=7){
    printf("\nAprovado");
   }
  
   else{
    printf("\nReprovado");
   }
   
   return 0;
   
   }
   
   
